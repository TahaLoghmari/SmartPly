# Copy this file to .env and fill in your actual values

DB_HOST=db
DB_NAME=smartply
DB_USER=YOUR_DB_USER
DB_PASSWORD=YOUR_DB_PASSWORD
DB_PORT=5432
# Database Connection
ConnectionStrings__Database=Host=${DB_HOST};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD};Port=${DB_PORT}

# JWT Settings
Jwt__Key=YOUR_JWT_SECRET_KEY_HERE
Jwt__Issuer=http://localhost:5000
Jwt__Audience=http://localhost:5173
Jwt__ExpirationInMinutes=
Jwt__RefreshTokenExpirationDays=

# Google OAuth
Google__ClientId=YOUR_GOOGLE_CLIENT_ID
Google__ClientSecret=YOUR_GOOGLE_CLIENT_SECRET
Google__RedirectUri=http://localhost:5000/auth/google/callback
Google__Scopes=openid email profile https://www.googleapis.com/auth/gmail.readonly

# Email Settings
EmailSettings__MailServer=smtp.gmail.com
EmailSettings__MailPort=587
EmailSettings__SenderName=SmartPly
EmailSettings__FromEmail=YOUR_EMAIL@gmail.com
EmailSettings__Password=YOUR_EMAIL_APP_PASSWORD

# URLs
Frontend__BaseUrl=http://localhost:5173
VITE_API_BASE_URL=http://localhost:5000

# Supabase
Supabase__ServiceRoleKey=YOUR_SUPABASE_SERVICE_ROLE_KEY
Supabase__Url=https://YOUR_SUPABASE_PROJECT_URL.supabase.co

# AI
Gemini__Credentials__ApiKey=YOUR_API_KEY
Gemini__Model=gemini-2.5-flash-lite